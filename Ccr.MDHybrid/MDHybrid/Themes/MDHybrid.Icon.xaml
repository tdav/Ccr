	<Style TargetType="icons:Icon">
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="Height" Value="48"/>
		<!--<Setter Property="FlowDirection" Value="LeftToRight"/>
    <Setter Property="HorizontalAlignment" Value="Left"/>
    <Setter Property="VerticalAlignment" Value="Top"/>-->
		<Setter Property="UseLayoutRounding" Value="False"/>
		<Setter Property="Width" Value="48"/>
		<Setter Property="IsTabStop" Value="False"/>
		<Setter Property="Padding" Value="0"/>
		<Setter Property="SnapsToDevicePixels" Value="False"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="icons:Icon">
					<Grid>
						<Border Background="{TemplateBinding Background}"
										BorderBrush="{TemplateBinding BorderBrush}"
										BorderThickness="{TemplateBinding BorderThickness}"
										SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
						<Grid x:Name="PART_InnerGrid"
									Margin="{TemplateBinding Padding}"
									RenderTransformOrigin=".5,.5">
							<Grid.RenderTransform>
								<TransformGroup>
									<RotateTransform Angle="{TemplateBinding Rotation}"/>
									<ScaleTransform x:Name="PART_FlipTransform"
																	CenterX="0.5"
																	CenterY="0.5">
										<ScaleTransform.ScaleX>
											<Binding Converter="{IconFlipToScaleTransform}"
															 ConverterParameter="X"
															 Path="Flip"
															 RelativeSource="{RelativeSource TemplatedParent}"/>
										</ScaleTransform.ScaleX>
										<ScaleTransform.ScaleY>
											<Binding Converter="{IconFlipToScaleTransform}"
															 ConverterParameter="Y"
															 Path="Flip"
															 RelativeSource="{RelativeSource TemplatedParent}"/>
										</ScaleTransform.ScaleY>
									</ScaleTransform>
								</TransformGroup>
							</Grid.RenderTransform>
							<Viewbox>
								<Canvas Width="24" Height="24">
									<Path Fill="{TemplateBinding Foreground}">
										<Path.Data>
											<Binding Mode="OneWay"
															 Path="Geometry"
															 RelativeSource="{RelativeSource TemplatedParent}"/>
										</Path.Data>
									</Path>
								</Canvas>
							</Viewbox>
						</Grid>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>